<% if @user.errors.any?  %>
	<h3>The following errors prevented saving the data</h3>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
<div>
	<p>
		<%= f.label :username %><br>
		<%= f.text_field :username , class: "form-control rounded shadow w-50", placeholde:"Enter Username" %>
	</p>

	<p>
		<%= f.label :email %><br>
		<%= f.email_field :email , class: "form-control rounded shadow w-50", placeholde:"Enter Email" %>
	</p>

	<p>
		<%= f.label :password %><br>
		<%= f.password_field :password, class: "form-control rounded shadow w-50", placeholde:"Enter Password" %>
	</p>

	<p>
		<%= f.submit %> 
	</p>
</div>

<% end %>