<h1 class="text-center mt-4"><%= @user.username %>'s Profile</h1>

<%= gravatar_for @user, size: 200 %><br>

<div class="text-center mt-4">
	<% if logged_in? && (@user == current_user || current_user.admin?) %>
		<%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-outline-info" %>
	<% end %>
	<% if logged_in? && current_user.admin? && !@user.admin? %>
      <%= link_to 'Delete Profile', user_path(@user), class: "btn btn-danger" ,
        method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
</div>
<br>
<h3 class="text-center">Articles By <%= @user.username %></h3>

<%= render "articles/articles" %>